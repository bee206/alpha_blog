<div class="heading">
  <h1 align="center">All Alpha Blogger</h1>
</div>
<div class="paginate">
  <%= will_paginate %>
</div>
<div align="center">
  <% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravtar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count, 'article') if user.articles %></small></li>
        <% if logged_in? && current_user.admin? %>
          <li id="delete"><%= link_to 'Delete this user', user_path(user), method: :delete, 
                                                        data: { confirm: "Are you sure delete the user and all their articles?" } %></li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>
</div>
<div class="paginate paginate-bottom">
  <%= will_paginate %>
</div>