<h1>Edit existing article</h1>

<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting updated!</h2>
  <ul>
    <% @article.errors.full_messages.each do |error|  %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'form' %>

<p><%= link_to 'Back to articles listing', articles_path %></p>